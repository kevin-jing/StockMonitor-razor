@page
@model StockMonitor.Pages.Transactions.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Transaction[0].StockId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Transaction[0].IsBuying)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Transaction[0].StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Transaction[0].CurrentPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Transaction[0].ExpectedDays)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Transaction) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StockId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsBuying)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpectedDays)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
