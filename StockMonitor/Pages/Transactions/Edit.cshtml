@page
@model StockMonitor.Pages.Transactions.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Transaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Transaction.Id" />
            <div class="form-group">
                <label asp-for="Transaction.StockId" class="control-label"></label>
                <input asp-for="Transaction.StockId" class="form-control" />
                <span asp-validation-for="Transaction.StockId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Transaction.IsBuying" /> IsBuying?
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.StartDate" class="control-label"></label>
                <input asp-for="Transaction.StartDate" class="form-control" />
                <span asp-validation-for="Transaction.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.CurrentPrice" class="control-label"></label>
                <input asp-for="Transaction.CurrentPrice" class="form-control" />
                <span asp-validation-for="Transaction.CurrentPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.ExpectedDays" class="control-label"></label>
                <input asp-for="Transaction.ExpectedDays" class="form-control" />
                <span asp-validation-for="Transaction.ExpectedDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
